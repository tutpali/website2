---
export const prerender = false;

import Layout from '../../../layouts/Layout.astro';
import ClinicCard from '../../../components/ClinicCard.astro';
import { getClinicsByCity, getCitiesInState } from '../../../lib/supabase';

const { state, city } = Astro.params;

if (!state || !city) {
  return Astro.redirect('/directory');
}

// Convert URL slugs back to proper names
const stateName = state.split('-').map(word => 
  word.charAt(0).toUpperCase() + word.slice(1)
).join(' ');

const cityName = city.split('-').map(word => 
  word.charAt(0).toUpperCase() + word.slice(1)
).join(' ');

const clinics = await getClinicsByCity(stateName, cityName);

// If no clinics found, redirect to state page
if (clinics.length === 0) {
  return Astro.redirect(`/directory/${state}`);
}
---

<Layout 
  title={`Hyperhidrosis Clinics in ${cityName}, ${stateName} - Treatment Specialists`}
  description={`Find hyperhidrosis treatment specialists in ${cityName}, ${stateName}. ${clinics.length} verified clinics offering excessive sweating treatments.`}
  keywords={`hyperhidrosis ${cityName}, excessive sweating treatment ${cityName} ${stateName}, dermatology ${cityName}`}
>
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="container">
      <div class="flex items-center space-x-2 text-sm text-gray-600">
        <a href="/" class="hover:text-primary-600">Home</a>
        <span>›</span>
        <a href="/directory" class="hover:text-primary-600">Directory</a>
        <span>›</span>
        <a href={`/directory/${state}`} class="hover:text-primary-600">{stateName}</a>
        <span>›</span>
        <span class="text-gray-900">{cityName}</span>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <section class="bg-gradient-to-r from-red-500 to-red-600 text-white py-12">
    <div class="container">
      <h1 class="text-4xl font-heading font-bold mb-4">Hyperhidrosis Clinics in {cityName}, {stateName}</h1>
      <p class="text-xl mb-6">{clinics.length} verified specialist{clinics.length !== 1 ? 's' : ''} in {cityName}</p>
      
      <!-- Search -->
      <div class="max-w-md">
        <form action="/search" method="get" class="flex">
          <input 
            type="text" 
            name="q" 
            placeholder="Search clinics in {cityName}..."
            class="flex-1 px-4 py-3 rounded-l-lg text-gray-900 focus:ring-2 focus:ring-white focus:outline-none"
          />
          <button 
            type="submit"
            class="bg-white text-red-600 px-6 py-3 rounded-r-lg hover:bg-gray-100 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- Clinics -->
  <section class="py-12">
    <div class="container">
      <div class="flex items-center justify-between mb-8">
        <h2 class="text-2xl font-heading font-bold text-gray-900">All Clinics in {cityName}, {stateName}</h2>
        <div class="text-gray-600">
          {clinics.length} clinic{clinics.length !== 1 ? 's' : ''} found
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {clinics.map((clinic) => (
          <ClinicCard clinic={clinic} />
        ))}
      </div>
    </div>
  </section>

  <!-- Back to State -->
  <section class="py-12 bg-gray-50">
    <div class="container">
      <div class="text-center">
        <h2 class="text-2xl font-heading font-bold text-gray-900 mb-4">Looking for More Options?</h2>
        <p class="text-gray-600 mb-6">Explore all clinics in {stateName}</p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href={`/directory/${state}`} class="bg-red-500 text-white px-8 py-3 rounded-lg hover:bg-red-600 transition-colors font-medium">
            View All {stateName} Clinics
          </a>
          <a href="/products" class="bg-red-500 text-white px-8 py-3 rounded-lg hover:bg-red-600 transition-colors font-medium">
            Shop Sweat Solutions
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>